	font-size:16px;
	font-weight:700;
	}
	
.main_banner_collumn.banner_placement {
	margin-left:20px;
}

.main_banner.banner  {
	width:100%;
	float:none;
}
}



/*mobile S version*/
@media screen and (max-width: 320px) {
.banner_content span {
	font-size:14px;
	font-weight:500;
	}
